{% set ping_targets = [{ 'host': 'overwatch.mit.edu' }] + he_lg_ping_targets %}

[[inputs.ping]]
  interval = "30s"
  method = "native"
  urls = [
{% for host in ping_targets %}
    "{{ host.host }}",
{%- endfor %}
  ]
  ipv6 = false

[[processors.starlark]]
  namepass = ["ping"]
  source = '''
tags = {
{% for host in ping_targets %}
"{{ host.host }}": {{ topython(host)|safe }},
{%- endfor %}
}
def apply(metric):
  url = metric.tags.get("url")
  extra = tags.get(url)
  if extra:
    extra = dict(extra)
    extra.pop("host")
    if "exchanges" in extra:
      extra["exchanges"] = ", ".join(extra["exchanges"])
    metric.tags.update(extra)
  return metric
'''

